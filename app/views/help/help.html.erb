<%= render partial: '/shared/navbar', locals: {central: "central_index", left: "upload_form", title: 'Help', right: "link_home"} %>

<div class='container'>

  <div class = "dropdown_selector">
    <% if Rails.env.development? or params[:override] == 'ohyeah'  %>
      <%= link_to 'Aggiungi', new_help_path, id: 'add_text' %>
    <% end %>
    <%= select_tag :helps, options_for_select(@helps.map{|help| [ help[:title], "help/#{help[:id]}" ] }), include_blank: true, class: :selector_for_text %>
    <% if Rails.env.development? or params[:override] == 'ohyeah'  %>
      <%= link_to 'Cancella', '#', id: 'delete_text' %>
    <% end %>
  </div>

  <pre>
    <p id='white_paper', style='white-space: pre-wrap'></p>
  </pre>
</div>
